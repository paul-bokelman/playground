{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build",
    "module": "NodeNext",
    "strict": true,
    "target": "ES6",
    "skipLibCheck": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    },
    "files": true
  },

  "include": ["logger.ts", "archive/*", "types/*.d.ts", "archive/math/*"],
  "exclude": ["node_modules"]
}

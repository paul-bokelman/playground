{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "outDir": "build",
    "module": "NodeNext",
    "strict": true,
    "target": "ES6",
    "skipLibCheck": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    },
    "files": true
  },

  "include": [
    "logger.ts",
    "archive/*",
    "types/*.d.ts",
    "archive/math/*",
    "archive/javascript/yup-format-error.js",
    "archive/javascript/reduce-by-filter.ts",
    "archive/javascript/some.ts",
    "archive/javascript/path-with-params.ts",
    "archive/javascript/construct-template-areas.ts"
  ],
  "exclude": ["node_modules"]
}
